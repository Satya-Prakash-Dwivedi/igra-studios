// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // set this in your .env
  directUrl = env("DIRECT_URL") // optional, Supabase pooler direct url
}

model Profile {
  id          String   @id @map("user_id") @db.Uuid // same as auth.users.id
  email       String   @unique
  firstName   String   @map("first_name")
  lastName    String   @map("last_name")
  photoUrl    String?  @map("photo_url") // profile picture URL (S3/Supabase storage)
  companyName String?  @map("company_name")
  channelLink String?  @map("channel_link") // âœ… NEW field
  wantsEmail  Boolean  @default(true) @map("wants_email")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("profiles") // table name in DB
}
